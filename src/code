 <template v-slot:column.header="{ column }">
        <!-- Render custom header slot content if provided -->
        <slot name="header" :column="column">
          <th>{{ column.text }}</th> <!-- Default header rendering -->
        </slot>
      </template>

      <!-- Body Slot -->
      <template v-slot:body="{ items }">
        <tbody>
          <tr v-for="item in items" :key="item.id">
            <td v-for="column in headers" :key="column.value">
              <!-- Render custom row slot content if provided -->
              <slot name="cell" :item="item" :column="column">
                {{ item[column.value] }} <!-- Default cell rendering -->
              </slot>
            </td>
            <!-- Render custom actions slot content if provided -->
            <td>
              <slot name="custom-actions" :item="item" />
            </td>
          </tr>
        </tbody>
      </template>